<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.maxieds.chameleonminilivedebugger.LiveLoggerActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ffffff" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:background="#555753"
        android:layout_marginBottom="0dp"
        android:paddingLeft="5dp"
        android:paddingRight="4dp">


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="#555753"
            android:columnCount="2"
            android:padding="0dp"
            android:rowCount="2">

            <TextView
                android:id="@+id/deviceConfigText"
                android:minWidth="125dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#555753"
                android:text="DEVICE CONFIGURATION"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:layout_weight="0.42"
                android:paddingRight="10dp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/deviceStats1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#555753"
                android:text="MEM / LOG / DIP#"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:gravity="right"
                android:layout_weight="0.53"
                android:textStyle="normal|italic" />

            <TextView
                android:id="@+id/deviceConfigUID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#555753"
                android:text="DEVICE UID"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:paddingRight="10dp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/deviceStats2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#555753"
                android:text="RO / FLD1 / NOCHRG"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:gravity="right"
                android:textStyle="normal|italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#555753" />

            <TextView
                android:id="@+id/deviceStats3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#555753"
                android:text="THRES / TMOUT"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:gravity="right"
                android:textStyle="normal|italic" />

        </GridLayout>

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/refresh24"
            android:drawablePadding="10dp"
            android:layout_marginLeft="5dp"
            android:onClick="actionButtonRefreshDeviceStatus"
            android:background="#555753"
            android:elevation="0dp"
            android:gravity="left|center_vertical"/>

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/info24"
            android:drawablePadding="10dp"
            android:layout_marginLeft="5dp"
            android:onClick="actionButtonAboutTheApp"
            android:textColor="#ffffff"
            android:background="#555753"
            android:gravity="left|center_vertical" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/closeicon24"
            android:drawablePadding="6dp"
            android:layout_marginLeft="5dp"
            android:onClick="actionButtonExit"
            android:background="#555753"
            android:gravity="left|center_vertical"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ffffff" />

    <LinearLayout
        style="@style/AppTheme"
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TabHost
            android:id="@+id/tab_host"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0px"
            android:padding="0dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.523"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:visibility="visible"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/colorPrimaryDark"
                app:tabIndicatorHeight="3dp"
                app:tabMaxWidth="0dp"
                app:tabMinWidth="0dp"
                app:tabMode="fixed"
                app:tabPaddingEnd="-1dp"
                app:tabPaddingStart="-1dp"
                app:tabTextAppearance="?android:attr/textAppearanceSmall">

                <android.support.design.widget.TabItem
                    android:id="@+id/main_logger_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log"
                    android:visibility="visible"
                    android:icon="@drawable/nfc24v1" />

                <android.support.design.widget.TabItem
                    android:id="@+id/tools_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tools Menu"
                    android:icon="@drawable/tools24" />

                <android.support.design.widget.TabItem
                    android:id="@+id/export_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Export"
                    android:icon="@drawable/insertbinary24"/>

                <android.support.design.widget.TabItem
                    android:id="@+id/search_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:textColor="#dcdcdc"
                    android:icon="@drawable/searchdisabled24" />

            </android.support.design.widget.TabLayout>

        </TabHost>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark" />

        <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/tab_pager"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_weight="1.0"
            android:background="@color/colorPrimary"
            android:padding="8dp"
            tools:context="net.voidynullness.android.tabitytabs.TabLayoutActivity">

        </android.support.v4.view.ViewPager>

    </LinearLayout>

</LinearLayout>
