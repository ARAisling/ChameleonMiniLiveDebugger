<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/tools_menu_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:verticalScrollbarPosition="right"
        android:fadeScrollbars="false"
        android:scrollbarSize="25dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDarkLog"
                android:drawableLeft="@drawable/settings16"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:text="Set configurations and de-select:"
                android:textAllCaps="true"
                android:textStyle="bold|italic" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimaryDark" />

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/colorAccentLog"
                android:columnCount="3"
                android:padding="2dp"
                android:rowCount="10">

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/binarymobile24"
                    android:onClick="actionButtonCreateNewEvent"
                    android:text="READER" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/binarysearch24"
                    android:onClick="actionButtonCreateNewEvent"
                    android:text="SNIFFER" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/replay24"
                    android:text="Log Replay" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/chip24v3"
                    android:onClick="actionButtonCreateNewEvent"
                    android:text="ULTRALIGHT" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/card24v9"
                    android:onClick="actionButtonCreateNewEvent"
                    android:text="CLASSIC-4K" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/chip24v4"
                    android:onClick="actionButtonCreateNewEvent"
                    android:text="CLASSIC-4K7B" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/clearicon24"
                    android:onClick="actionButtonClearAllLogs"
                    android:text="Clear All" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/uncheckicon24"
                    android:onClick="actionButtonUncheckAll"
                    android:text="UNCHECK ALL" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/tagwriter24"
                    android:onClick="actionButtonAboutTheApp"
                    android:text="ABOUT APP" />

            </GridLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimaryDark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDarkLog"
                android:drawableLeft="@drawable/infobubble16"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:text="Annotate logs:"
                android:textAllCaps="true"
                android:textStyle="bold|italic" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimaryDark" />

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/colorAccentLog"
                android:columnCount="3"
                android:padding="2dp"
                android:rowCount="10">

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/msgbubble24"
                    android:onClick="actionButtonCreateNewEvent"
                    android:text="STATUS" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/statusicon24"
                    android:onClick="actionButtonCreateNewEvent"
                    android:text="NEW EVENT" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/erroricon24"
                    android:onClick="actionButtonCreateNewEvent"
                    android:text="ERROR" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/cardicon24"
                    android:onClick="actionButtonCreateNewEvent"
                    android:text="CARD INFO" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/location24"
                    android:onClick="actionButtonCreateNewEvent"
                    android:text="LOCATION" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/dooricon24"
                    android:onClick="actionButtonCreateNewEvent"
                    android:text="DOOR" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/vending24"
                    android:onClick="actionButtonCreateNewEvent"
                    android:text="VENDING" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/phone24"
                    android:onClick="actionButtonCreateNewEvent"
                    android:text="PHONE" />


                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/powaction24"
                    android:onClick="actionButtonCreateNewEvent"
                    android:text="ONCLICK" />

            </GridLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDarkLog"
                android:drawableLeft="@drawable/hashmark16"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:text="Run device commands: "
                android:textAllCaps="true"
                android:textStyle="bold|italic"
                android:drawableRight="@drawable/scrollmore16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimaryDark" />

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/colorAccentLog"
                android:columnCount="3"
                android:padding="2dp"
                android:rowCount="10">

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/usericon24"
                    android:onClick="actionButtonCreateNewEvent"
                    android:text="LOCAL UID" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/signalicon24"
                    android:onClick="actionButtonCreateNewEvent"
                    android:text="STRENGTH" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/batteryicon24"
                    android:onClick="actionButtonCreateNewEvent"
                    android:text="CHARGING" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/firmwareicon24"
                    android:onClick="actionButtonCreateNewEvent"
                    android:text="FIRMWARE" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/rssi24"
                    android:onClick="actionButtonCreateNewEvent"
                    android:text="RSSI" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/find24"
                    android:onClick="actionButtonCreateNewEvent"
                    android:text="IDENTIFY" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/af24"
                    android:onClick="actionButtonRunCommand"
                    android:tag="FIELD?"
                    android:text="FIELD?" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/calibrate24"
                    android:onClick="actionButtonRunCommand"
                    android:tag="AUTOCALIBRATE"
                    android:text="AUTOCAL" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/dumpfile24"
                    android:onClick="actionButtonRunCommand"
                    android:tag="DUMP_MFU"
                    android:text="DUMP_MFU" />

            </GridLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimaryDark" />

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/colorAccentLog"
                android:columnCount="2"
                android:padding="2dp"
                android:rowCount="10">

            <ImageView android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/cmd24" />
            <Spinner
                android:id="@+id/FullCmdListSpinner"
                android:layout_width="300dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:entries="@array/FullCommandList"
                android:spinnerMode="dialog"
                android:gravity="right|center_vertical"
                android:popupBackground="#98fb98" />

            </GridLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@color/colorPrimaryDark" />

            <EditText
                android:id="@+id/userInputFormattedBytes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/abacus24v2"
                android:drawablePadding="11dp"
                android:paddingLeft="5dp"
                android:layout_marginLeft="0dp"
                android:background="@color/colorAccentLog"
                android:hint="01 23 45 67 89 ab cd ef"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimaryDark" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDarkLog"
                android:drawableLeft="@drawable/peripheral16"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:text="Peripherals and log mode: "
                android:textAllCaps="true"
                android:textStyle="bold|italic" />

                <Button
                    style="@style/GridButtons"
                    android:layout_height="20dp"
                    android:layout_width="wrap_content"
                    android:drawableLeft="@drawable/querydefaults16"
                    android:text="[Query Device]"
                    android:textSize="10sp"
                    android:onClick="actionButtonRestorePeripheralDefaults"
                    android:background="@color/colorPrimaryDarkLog" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimaryDark" />

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/colorAccentLog"
                android:columnCount="2"
                android:padding="2dp"
                android:rowCount="10">

                <ImageView android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/ledred24" />
                <Spinner
                    android:id="@+id/LEDRedSpinner"
                    android:layout_width="300dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:entries="@array/LEDRedOptions"
                    android:tag="LEDRED="
                    android:spinnerMode="dialog"
                    android:gravity="right|center_vertical"
                    android:popupBackground="#98fb98" />

                <ImageView android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/ledgreen24" />
                <Spinner
                    android:id="@+id/LEDGreenSpinner"
                    android:layout_width="300dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:entries="@array/LEDGreenOptions"
                    android:tag="LEDGREEN="
                    android:spinnerMode="dialog"
                    android:gravity="right|center_vertical"
                    android:popupBackground="#98fb98" />

                <ImageView android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/rbutton24" />
                <Spinner
                    android:id="@+id/RButtonSpinner"
                    android:layout_width="300dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:entries="@array/RButtonOptions"
                    android:tag="RBUTTON="
                    android:spinnerMode="dialog"
                    android:gravity="right|center_vertical"
                    android:popupBackground="#98fb98" />

                <ImageView android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/rightbutton24" />
                <Spinner
                    android:id="@+id/RButtonLongSpinner"
                    android:layout_width="300dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:entries="@array/RButtonLongOptions"
                    android:tag="RBUTTON_LONG="
                    android:spinnerMode="dialog"
                    android:gravity="right|center_vertical"
                    android:popupBackground="#98fb98" />

                <ImageView android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/lbutton24" />
                <Spinner
                    android:id="@+id/LButtonSpinner"
                    android:layout_width="300dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:entries="@array/LButtonOptions"
                    android:tag="LBUTTON="
                    android:spinnerMode="dialog"
                    android:gravity="right|center_vertical"
                    android:popupBackground="#98fb98" />

                <ImageView android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/leftbutton24" />
                <Spinner
                    android:id="@+id/LButtonLongSpinner"
                    android:layout_width="300dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:entries="@array/LButtonLongOptions"
                    android:tag="LBUTTON_LONG="
                    android:spinnerMode="dialog"
                    android:gravity="right|center_vertical"
                    android:popupBackground="#98fb98" />

                <ImageView android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/log24" />
                <Spinner
                    android:id="@+id/LogModeSpinner"
                    android:layout_width="300dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:entries="@array/LogModeOptions"
                    android:tag="LOGMODE="
                    android:spinnerMode="dialog"
                    android:gravity="right|center_vertical"
                    android:popupBackground="#98fb98" />

            </GridLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimaryDark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDarkLog"
                android:drawableLeft="@drawable/checkbox16"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:text="Apply to selected: "
                android:textAllCaps="true"
                android:textStyle="bold|italic"
                android:drawableRight="@drawable/scrollmore16" />

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/colorAccentLog"
                android:columnCount="3"
                android:orientation="horizontal"
                android:padding="2dp"
                android:rowCount="2">

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/incoming16v2"
                    android:onClick="actionButtonSetSelectedXFer"
                    android:tag="1"
                    android:text="Incoming" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/outgoing16v2"
                    android:onClick="actionButtonSetSelectedXFer"
                    android:tag="2"
                    android:text="Outgoing" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/xfer16"
                    android:onClick="actionButtonSetSelectedXFer"
                    android:tag="0"
                    android:text="Set xFer" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/copy24"
                    android:onClick="actionButtonProcessBatch"
                    android:tag="COPY"
                    android:text="COPY" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/wifibc24"
                    android:onClick="actionButtonProcessBatch"
                    android:tag="SEND"
                    android:text="SEND Data" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/broadcastantenna24"
                    android:onClick="actionButtonProcessBatch"
                    android:tag="SEND_RAW"
                    android:text="SEND_RAW" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/clone24"
                    android:onClick="actionButtonProcessBatch"
                    android:tag="CLONE_UID"
                    android:text="Clone UID" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/dotdotdotbubble24"
                    android:onClick="actionButtonProcessBatch"
                    android:tag="PRINT"
                    android:text="Print Full" />

                <Button
                    style="@style/GridButtons"
                    android:drawableLeft="@drawable/hide24"
                    android:onClick="actionButtonProcessBatch"
                    android:tag="HIDE"
                    android:text="Collapse" />

            </GridLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDarkLog"
                android:drawableLeft="@drawable/highlight16"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:text="Highlight selected:"
                android:textAllCaps="true"
                android:textStyle="bold|italic" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimaryDark" />

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/colorAccentLog"
                android:columnCount="13"
                android:orientation="horizontal"
                android:padding="2dp"
                android:rowCount="1">

                <Button
                    style="@style/ColorHighlightButtons"
                    android:background="#ff5ba5"
                    android:onClick="actionButtonSelectedHighlight"
                    android:tag="#ff5ba5" />

                <Button
                    style="@style/ColorHighlightButtons"
                    android:background="#c2b4d6"
                    android:onClick="actionButtonSelectedHighlight"
                    android:tag="#c2b4d6" />

                <Button
                    style="@style/ColorHighlightButtons"
                    android:background="#d3ac26"
                    android:onClick="actionButtonSelectedHighlight"
                    android:tag="#d3ac26" />

                <Button
                    style="@style/ColorHighlightButtons"
                    android:background="#b07cda"
                    android:onClick="actionButtonSelectedHighlight"
                    android:tag="#b07cda" />

                <Button
                    style="@style/ColorHighlightButtons"
                    android:background="#3bc6b6"
                    android:onClick="actionButtonSelectedHighlight"
                    android:tag="#3bc6b6" />

                <Button
                    style="@style/ColorHighlightButtons"
                    android:background="#637a89"
                    android:onClick="actionButtonSelectedHighlight"
                    android:tag="#637a89" />

                <Button
                    style="@style/ColorHighlightButtons"
                    android:background="#a3c6c4"
                    android:onClick="actionButtonSelectedHighlight"
                    android:tag="#a3c6c4" />

                <Button
                    style="@style/ColorHighlightButtons"
                    android:background="#f46528"
                    android:onClick="actionButtonSelectedHighlight"
                    android:tag="#f46528" />

                <Button
                    style="@style/ColorHighlightButtons"
                    android:background="#9f4298"
                    android:onClick="actionButtonSelectedHighlight"
                    android:tag="#9f4298" />

                <Button
                    style="@style/ColorHighlightButtons"
                    android:background="#a0d3f9"
                    android:onClick="actionButtonSelectedHighlight"
                    android:tag="#a0d3f9" />

                <Button
                    style="@style/ColorHighlightButtons"
                    android:background="#f4ed6e"
                    android:onClick="actionButtonSelectedHighlight"
                    android:tag="#f4ed6e" />

                <Button
                    style="@style/ColorHighlightButtons"
                    android:background="#fffee6"
                    android:onClick="actionButtonSelectedHighlight"
                    android:tag="#fffee6" />

                <Button
                    style="@style/ColorHighlightButtons"
                    android:background="#ffca2b"
                    android:onClick="actionButtonSelectedHighlight"
                    android:tag="#ffca2b" />


            </GridLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>