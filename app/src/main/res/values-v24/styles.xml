<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBar">true</item>
        <item name="android:actionBarStyle">@style/ActionBarTheme</item>
        <item name="android:popupTheme">@style/SpinnerTheme</item>
    </style>

    <style name="SpinnerTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">#98fb98</item>
        <item name="buttonStyle">@style/AboutButtonTheme</item>
    </style>

    <style name="AboutButtonTheme" parent="AppTheme">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@color/colorAccentHighlight</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LogDataUITheme" parent="AppTheme">
        <item name="android:background">@color/colorPrimaryDarkLog</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBarTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="logo">@drawable/chameleonicon64</item>
        <item name="displayOptions">useLogo|showHome</item>
        <item name="android:contentInsetEnd">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetLeft">5dp</item>
        <item name="android:titleMarginStart">5dp</item>
    </style>

    <style name="GridButtons">
        <item name="android:background">@color/colorAccentLog</item>
        <item name="android:maxButtonHeight">8dp</item>
        <item name="android:layout_columnWeight">0.25</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:maxHeight">40dp</item>
        <item name="android:layout_weight">0.29</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal|bold</item>
    </style>

    <style name="ColorHighlightButtons">
        <item name="android:maxButtonHeight">8dp</item>
        <item name="android:layout_columnWeight">0.075</item>
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_weight">0.075</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal|bold</item>
    </style>

    <style name="CheckBoxTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

</resources>